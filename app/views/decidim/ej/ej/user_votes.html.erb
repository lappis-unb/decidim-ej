<h1>Conversas que participei</h1>

<% participated_conversations = @conversations.select do |conversation| %>
  <% conversation["user_stats"]["participation_ratio"].to_f > 0 %>
<% end %>

<% if participated_conversations.any? %>
  <ul>
    <% participated_conversations.each do |conversation| %>
      <li>
        <%= link_to conversation["text"], ej_path(conversation["id"]), class: "btn btn-primary" %><br>
        Participação: <%= number_to_percentage(conversation["user_stats"]["participation_ratio"].to_f * 100.0, precision: 2) %>
        <div class="ej-conversation-card__comments">
          Comentário <%= conversation['user_stats']['comments'] %> de <%= conversation['user_stats']['total_comments'] %>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Você ainda não participou de nenhuma conversa.</p>
<% end %>